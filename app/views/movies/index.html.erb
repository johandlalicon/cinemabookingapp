<div class="prose">
  <h1 class="text-center">All Movies</h1>
  <p class="text-center text-sm mb-4">Note: Click on the timeslot to book!</p>
  <table class="border-collapse border border-gray-300 w-full">
    <thead class="bg-gray-200 ">
      <tr>
        <th class="border border-gray-300 py-2 px-4">Movie</th>
        <th class="border border-gray-300 py-2 px-4">Screening Time</th>
        <th class="border border-gray-300 py-2 px-4">Mall</th>
        <th class="border border-gray-300 py-2 px-4">Cinema</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @screenings.each do |screening| %>
        <tr class="text-center">
          <td class="border border-gray-300 py-2 px-4"><%= screening.movie.title %></td>
          <td class="border border-gray-300 py-2 px-4">
            <% if user_signed_in? %>
              <%= link_to screening.timeslot.start_time, new_booking_path(screening_id: screening.id), class: "text-blue-500 underline" %>
            <% else %>
              <%= link_to screening.timeslot.start_time, new_user_session_path, class: "text-blue-500 underline" %>
            <% end %>
          </td>
          <td class="border border-gray-300 py-2 px-4"><%= screening.cinema.mall.name %></td>
          <td class="border border-gray-300 py-2 px-4"><%= screening.cinema.cinema_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
