<div class="prose">
  <h1><%= @mall.name %></h1>
  <p><strong>Location:</strong> <%= @mall.location %></p>
  <p><strong>Number of Cinemas:</strong> <%= @mall.number_of_cinemas %></p>
  <p><strong>Total Screenings: </strong> <%= @mall.total_screenings_count %></p>
  <%= link_to "Create Screening for this Mall", new_admin_screening_path(mall_id: @mall.id), class: form_button_class %>
  <%= button_to "Delete Mall", admin_mall_path(@mall), method: :delete, data: { confirm: 'Are you sure you want to delete this mall?' }, class: "text-sm mt-2 inline-block px-2 py-1  bg-red-500 text-white rounded hover:bg-red-600" %>
</div>
