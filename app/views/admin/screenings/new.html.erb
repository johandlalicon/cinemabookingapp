<%= form_with(model: @screening, url: admin_screenings_path, local: true) do |form| %>
  <%= form.label :movie_id %>
  <%= form.collection_select :movie_id, @movies, :id, :title %>
  <div data-controller="cinema">
    <%= form.label :cinema_id %>
    <%= form.collection_select :cinema_id, @cinemas, :id, :cinema_number, {prompt: "Select Cinema"}, data: { action: "change->cinema#change"} %>
    <%= form.label :timeslot %>
    <%= form.collection_select :timeslot, [], :id, :timeslot_id, {prompt: "Select Timeslot"}, data: { cinema_target: "selectTimeslot" } %>
  </div>
  <%= form.submit %>
<% end %>
