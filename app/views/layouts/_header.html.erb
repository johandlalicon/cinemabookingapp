<header class="absolute inset-x-0 top-0 z-50">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="">
      </a>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Movies</a>
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">About</a>
      <% if current_user&.isAdmin? %>
        <%= link_to "Admin", admin_dashboard_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <% end %>
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Company</a>
    </div>
    <div class="lg:flex lg:flex-1 lg:justify-end">
      <% if !user_signed_in? %>
        <%= link_to 'Log in', new_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900 "%>
      <% else %>
        <%= link_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm font-semibold leading-6 text-gray-900 "%>
      <% end %>
    </div>
  </nav>
</header>
